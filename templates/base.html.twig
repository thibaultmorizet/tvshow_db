        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.13.0/css/all.css">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% block stylesheets %}{% endblock %}
		<title>
			{% block title %}TvShow DB{% endblock %}
		</title>
	</head>
	<body>
