{% extends 'base.html.twig' %}

{% block body %}

<div class="d-flex flex-row justify-content-between mb-5">
    <h2>SÃ©ries</h2>
    <div>
        {% if is_granted('ROLE_TVSHOW_ADMIN') %}
            <a href="{{ path('tv_show_add') }}" class="btn btn-primary">Ajouter</a>
        {% endif %}
    </div>
</div>

<form class="form-inline mb-5">
  <div class="form-group mr-2">
    <input type="text" value="{{ app.request.get('search') }}" class="form-control" name="search" placeholder="Rechercher par titre">
  </div>
